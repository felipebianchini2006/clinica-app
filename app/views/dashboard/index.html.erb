<!-- Welcome Header -->
<div class="mb-8">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-slate-900">
        OlÃ¡, <%= current_user.name.split.first %>! ðŸ‘‹
      </h1>
      <p class="mt-1 text-slate-500">
        <%= I18n.l(Date.current, format: "%A, %d de %B de %Y").capitalize %>
      </p>
    </div>
    <div class="mt-4 sm:mt-0">
      <%= link_to new_appointment_path, class: "inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-sm font-medium rounded-xl shadow-lg shadow-indigo-500/30 hover:shadow-xl hover:shadow-indigo-500/40 hover:-translate-y-0.5 transition-all duration-200" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Nova Consulta
      <% end %>
    </div>
  </div>
</div>

<!-- Stats Grid -->
<div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
  <!-- Patients Card -->
  <div class="group bg-white rounded-2xl shadow-sm hover:shadow-lg border border-slate-200/60 p-6 transition-all duration-300 hover:-translate-y-1">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-slate-500">Total Pacientes</p>
        <p class="mt-2 text-3xl font-bold text-slate-900"><%= Patient.count rescue 0 %></p>
      </div>
      <div class="w-12 h-12 bg-gradient-to-br from-emerald-400 to-emerald-600 rounded-xl flex items-center justify-center shadow-lg shadow-emerald-500/30 group-hover:scale-110 transition-transform duration-300">
        <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
      </div>
    </div>
    <%= link_to patients_path, class: "mt-4 inline-flex items-center text-sm font-medium text-emerald-600 hover:text-emerald-700 group-hover:underline" do %>
      Ver pacientes
      <svg class="ml-1 w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    <% end %>
  </div>

  <!-- Today's Appointments Card -->
  <div class="group bg-white rounded-2xl shadow-sm hover:shadow-lg border border-slate-200/60 p-6 transition-all duration-300 hover:-translate-y-1">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-slate-500">Consultas Hoje</p>
        <p class="mt-2 text-3xl font-bold text-slate-900"><%= Appointment.where(scheduled_at: Date.current.all_day).count rescue 0 %></p>
      </div>
      <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-xl flex items-center justify-center shadow-lg shadow-blue-500/30 group-hover:scale-110 transition-transform duration-300">
        <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    </div>
    <%= link_to appointments_path, class: "mt-4 inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-700 group-hover:underline" do %>
      Ver agenda
      <svg class="ml-1 w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    <% end %>
  </div>

  <!-- Practitioners Card -->
  <div class="group bg-white rounded-2xl shadow-sm hover:shadow-lg border border-slate-200/60 p-6 transition-all duration-300 hover:-translate-y-1">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-slate-500">Profissionais</p>
        <p class="mt-2 text-3xl font-bold text-slate-900"><%= Practitioner.count rescue 0 %></p>
      </div>
      <div class="w-12 h-12 bg-gradient-to-br from-violet-400 to-violet-600 rounded-xl flex items-center justify-center shadow-lg shadow-violet-500/30 group-hover:scale-110 transition-transform duration-300">
        <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
    </div>
    <% if current_user.admin? %>
      <%= link_to practitioners_path, class: "mt-4 inline-flex items-center text-sm font-medium text-violet-600 hover:text-violet-700 group-hover:underline" do %>
        Gerenciar
        <svg class="ml-1 w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      <% end %>
    <% else %>
      <p class="mt-4 text-sm text-slate-400">Equipe ativa</p>
    <% end %>
  </div>

  <!-- Pending Invoices Card -->
  <div class="group bg-white rounded-2xl shadow-sm hover:shadow-lg border border-slate-200/60 p-6 transition-all duration-300 hover:-translate-y-1">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-slate-500">Faturas Pendentes</p>
        <p class="mt-2 text-3xl font-bold text-slate-900"><%= Invoice.pending.count rescue 0 %></p>
      </div>
      <div class="w-12 h-12 bg-gradient-to-br from-amber-400 to-orange-500 rounded-xl flex items-center justify-center shadow-lg shadow-amber-500/30 group-hover:scale-110 transition-transform duration-300">
        <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
    </div>
    <%= link_to invoices_path, class: "mt-4 inline-flex items-center text-sm font-medium text-amber-600 hover:text-amber-700 group-hover:underline" do %>
      Ver faturas
      <svg class="ml-1 w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    <% end %>
  </div>
</div>

