<div class="min-h-screen bg-gray-100">
  <%= render "shared/navbar" %>

  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <%= render "shared/flash" %>

    <div class="px-4 sm:px-0">
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-900">Profissionais</h1>
        <% if current_user.admin? %>
          <%= link_to "Novo Profissional", new_practitioner_path, class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700" %>
        <% end %>
      </div>

      <!-- Search -->
      <%= form_with url: practitioners_path, method: :get, class: "mb-6" do |f| %>
        <div class="flex gap-4">
          <%= f.text_field :search, value: params[:search], placeholder: "Buscar por nome, especialidade ou CRM...",
              class: "flex-1 px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" %>
          <%= f.submit "Buscar", class: "bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700 cursor-pointer" %>
        </div>
      <% end %>

      <!-- Practitioners Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @practitioners.each do |practitioner| %>
          <div class="bg-white shadow rounded-lg p-6 hover:shadow-md transition-shadow">
            <div class="flex items-start justify-between">
              <div>
                <h3 class="text-lg font-medium text-gray-900"><%= practitioner.name %></h3>
                <p class="text-sm text-gray-500"><%= practitioner.specialty %></p>
                <p class="text-xs text-gray-400 mt-1">CRM: <%= practitioner.crm %></p>
              </div>
              <div class="flex gap-2">
                <%= link_to "Ver", practitioner, class: "text-indigo-600 hover:text-indigo-900 text-sm" %>
                <% if current_user.admin? %>
                  <%= link_to "Editar", edit_practitioner_path(practitioner), class: "text-gray-600 hover:text-gray-900 text-sm" %>
                <% end %>
              </div>
            </div>
            <% if practitioner.phone.present? %>
              <p class="text-sm text-gray-600 mt-3">
                <svg class="inline h-4 w-4 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <%= practitioner.phone %>
              </p>
            <% end %>
            <div class="mt-4 pt-4 border-t">
              <%= link_to "Agendar Consulta", new_appointment_path(practitioner_id: practitioner.id), class: "text-sm text-green-600 hover:text-green-800" %>
            </div>
          </div>
        <% end %>

        <% if @practitioners.empty? %>
          <div class="col-span-full bg-white shadow rounded-lg p-12 text-center">
            <p class="text-gray-500">Nenhum profissional encontrado.</p>
          </div>
        <% end %>
      </div>
    </div>
  </main>
</div>
