<div class="min-h-screen bg-gray-100">
  <%= render "shared/navbar" %>

  <main class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
    <%= render "shared/flash" %>

    <div class="px-4 sm:px-0">
      <div class="flex justify-between items-center mb-6">
        <div>
          <h1 class="text-2xl font-bold text-gray-900"><%= @practitioner.name %></h1>
          <p class="text-gray-500"><%= @practitioner.specialty %></p>
        </div>
        <div class="flex gap-2">
          <% if current_user.admin? %>
            <%= link_to "Editar", edit_practitioner_path(@practitioner), class: "bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700" %>
          <% end %>
          <%= link_to "Agendar Consulta", new_appointment_path(practitioner_id: @practitioner.id), class: "bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700" %>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Practitioner Info -->
        <div class="bg-white shadow rounded-lg p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Informações</h2>
          <dl class="space-y-3">
            <div>
              <dt class="text-sm font-medium text-gray-500">CRM</dt>
              <dd class="text-sm text-gray-900"><%= @practitioner.crm %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Especialidade</dt>
              <dd class="text-sm text-gray-900"><%= @practitioner.specialty %></dd>
            </div>
            <% if @practitioner.phone.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Telefone</dt>
                <dd class="text-sm text-gray-900"><%= @practitioner.phone %></dd>
              </div>
            <% end %>
            <% if @practitioner.user %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Email</dt>
                <dd class="text-sm text-gray-900"><%= @practitioner.user.email %></dd>
              </div>
            <% end %>
          </dl>
        </div>

        <!-- Upcoming Appointments -->
        <div class="lg:col-span-2 bg-white shadow rounded-lg p-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-medium text-gray-900">Próximas Consultas</h2>
            <%= link_to "Ver todas", appointments_path(practitioner_id: @practitioner.id), class: "text-sm text-indigo-600 hover:text-indigo-900" %>
          </div>
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <th class="text-left text-xs font-medium text-gray-500 uppercase">Data/Hora</th>
                <th class="text-left text-xs font-medium text-gray-500 uppercase">Paciente</th>
                <th class="text-left text-xs font-medium text-gray-500 uppercase">Status</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% @appointments.each do |appointment| %>
                <tr class="hover:bg-gray-50">
                  <td class="py-3 text-sm text-gray-900">
                    <%= link_to l(appointment.scheduled_at, format: :short), appointment, class: "hover:text-indigo-600" %>
                  </td>
                  <td class="py-3 text-sm text-gray-500">
                    <%= link_to appointment.patient.name, appointment.patient, class: "text-indigo-600 hover:text-indigo-900" %>
                  </td>
                  <td class="py-3">
                    <%= status_badge(appointment.status, :appointment) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <% if @appointments.empty? %>
            <p class="text-center py-4 text-gray-500">Nenhuma consulta agendada.</p>
          <% end %>
        </div>
      </div>

      <div class="mt-6">
        <%= link_to "← Voltar", practitioners_path, class: "text-gray-600 hover:text-gray-900" %>
      </div>
    </div>
  </main>
</div>
