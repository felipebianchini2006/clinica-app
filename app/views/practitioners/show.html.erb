<!-- Header -->
<div class="mb-8">
  <%= link_to practitioners_path, class: "inline-flex items-center text-sm text-slate-500 hover:text-indigo-600 mb-4 transition-colors" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Voltar para Profissionais
  <% end %>
  
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div class="flex items-center gap-4">
      <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-violet-500 to-purple-600 flex items-center justify-center text-white text-2xl font-bold shadow-lg shadow-violet-500/30">
        <%= @practitioner.name[0].upcase %>
      </div>
      <div>
        <h1 class="text-2xl font-bold text-slate-800"><%= @practitioner.name %></h1>
        <p class="text-slate-500"><%= @practitioner.specialty %></p>
      </div>
    </div>
    <div class="flex flex-wrap gap-2">
      <% if current_user.admin? %>
        <%= link_to edit_practitioner_path(@practitioner), class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-200 rounded-xl hover:bg-slate-50 transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Editar
        <% end %>
      <% end %>
      <%= link_to new_appointment_path(practitioner_id: @practitioner.id), class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-emerald-500 to-emerald-600 rounded-xl hover:from-emerald-600 hover:to-emerald-700 shadow-lg shadow-emerald-500/30 transition-all" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        Agendar Consulta
      <% end %>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Practitioner Info -->
  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg shadow-slate-200/50 border border-white/50 p-6">
    <h2 class="text-lg font-semibold text-slate-800 mb-4 flex items-center gap-2">
      <svg class="w-5 h-5 text-violet-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      Informações
    </h2>
    <dl class="space-y-4">
      <div>
        <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">CRM</dt>
        <dd class="mt-1 text-sm text-slate-800 font-medium"><%= @practitioner.crm %></dd>
      </div>
      <div>
        <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Especialidade</dt>
        <dd class="mt-1 text-sm text-slate-800"><%= @practitioner.specialty %></dd>
      </div>
      <% if @practitioner.phone.present? %>
        <div>
          <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Telefone</dt>
          <dd class="mt-1 text-sm text-slate-800"><%= @practitioner.phone %></dd>
        </div>
      <% end %>
      <% if @practitioner.user %>
        <div>
          <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Email</dt>
          <dd class="mt-1 text-sm text-slate-800"><%= @practitioner.user.email %></dd>
        </div>
      <% end %>
    </dl>
  </div>

  <!-- Upcoming Appointments -->
  <div class="lg:col-span-2 bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg shadow-slate-200/50 border border-white/50 p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-lg font-semibold text-slate-800 flex items-center gap-2">
        <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        Próximas Consultas
      </h2>
      <%= link_to "Ver todas", appointments_path(practitioner_id: @practitioner.id), class: "text-sm text-indigo-600 hover:text-indigo-800 font-medium" %>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full">
        <thead>
          <tr class="border-b border-slate-200">
            <th class="text-left text-xs font-semibold text-slate-500 uppercase tracking-wide py-3">Data/Hora</th>
            <th class="text-left text-xs font-semibold text-slate-500 uppercase tracking-wide py-3">Paciente</th>
            <th class="text-left text-xs font-semibold text-slate-500 uppercase tracking-wide py-3">Status</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
          <% @appointments.each do |appointment| %>
            <tr class="hover:bg-slate-50 transition-colors">
              <td class="py-3 text-sm text-slate-800">
                <%= link_to l(appointment.scheduled_at, format: :short), appointment, class: "hover:text-indigo-600 font-medium" %>
              </td>
              <td class="py-3 text-sm">
                <%= link_to appointment.patient.name, appointment.patient, class: "text-indigo-600 hover:text-indigo-800" %>
              </td>
              <td class="py-3">
                <%= status_badge(appointment.status, :appointment) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <% if @appointments.empty? %>
      <p class="text-center py-8 text-slate-500">Nenhuma consulta agendada.</p>
    <% end %>
  </div>
</div>
