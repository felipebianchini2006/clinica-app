<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8">
  <div>
    <h1 class="text-2xl sm:text-3xl font-bold text-slate-900">Financeiro</h1>
    <p class="mt-1 text-slate-500">Gerencie as faturas e pagamentos</p>
  </div>
  <div class="mt-4 sm:mt-0">
    <%= link_to new_invoice_path, class: "inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-sm font-medium rounded-xl shadow-lg shadow-indigo-500/30 hover:shadow-xl hover:shadow-indigo-500/40 hover:-translate-y-0.5 transition-all duration-200" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
      </svg>
      Nova Fatura
    <% end %>
  </div>
</div>

<!-- Summary Cards -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-5 mb-8">
  <div class="group bg-white rounded-2xl shadow-sm hover:shadow-lg border border-slate-200/60 p-6 transition-all duration-300 hover:-translate-y-1">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-slate-500">Total Pendente</p>
        <p class="mt-2 text-2xl font-bold text-amber-600"><%= format_currency(@total_pending) %></p>
      </div>
      <div class="w-12 h-12 bg-gradient-to-br from-amber-400 to-orange-500 rounded-xl flex items-center justify-center shadow-lg shadow-amber-500/30 group-hover:scale-110 transition-transform duration-300">
        <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
    </div>
  </div>

  <div class="group bg-white rounded-2xl shadow-sm hover:shadow-lg border border-slate-200/60 p-6 transition-all duration-300 hover:-translate-y-1">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-slate-500">Recebido este Mês</p>
        <p class="mt-2 text-2xl font-bold text-emerald-600"><%= format_currency(@total_paid_month) %></p>
      </div>
      <div class="w-12 h-12 bg-gradient-to-br from-emerald-400 to-emerald-600 rounded-xl flex items-center justify-center shadow-lg shadow-emerald-500/30 group-hover:scale-110 transition-transform duration-300">
        <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
    </div>
  </div>

  <div class="group bg-white rounded-2xl shadow-sm hover:shadow-lg border border-slate-200/60 p-6 transition-all duration-300 hover:-translate-y-1">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-slate-500">Relatórios</p>
        <%= link_to financial_reports_path, class: "mt-2 inline-flex items-center text-lg font-semibold text-indigo-600 hover:text-indigo-700 group-hover:underline" do %>
          Ver Relatório
          <svg class="ml-1 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>
      </div>
      <div class="w-12 h-12 bg-gradient-to-br from-indigo-400 to-purple-500 rounded-xl flex items-center justify-center shadow-lg shadow-indigo-500/30 group-hover:scale-110 transition-transform duration-300">
        <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      </div>
    </div>
  </div>
</div>

<!-- Filters -->
<div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 p-5 mb-6">
  <%= form_with url: invoices_path, method: :get, class: "" do |f| %>
    <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
      <div>
        <%= f.label :patient_id, "Paciente", class: "block text-sm font-medium text-slate-700 mb-1.5" %>
        <%= f.collection_select :patient_id, Patient.order(:name), :id, :name,
            { include_blank: "Todos", selected: params[:patient_id] },
            class: "block w-full px-3 py-2.5 border border-slate-200 rounded-xl bg-slate-50/50 focus:bg-white focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all text-sm" %>
      </div>
      <div>
        <%= f.label :status, "Status", class: "block text-sm font-medium text-slate-700 mb-1.5" %>
        <%= f.select :status, [["Todos", ""], ["Pendentes", "pending"], ["Pagos", "paid"], ["Vencidos", "overdue"]],
            { selected: params[:status] },
            class: "block w-full px-3 py-2.5 border border-slate-200 rounded-xl bg-slate-50/50 focus:bg-white focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all text-sm" %>
      </div>
      <div>
        <%= f.label :start_date, "Data Início", class: "block text-sm font-medium text-slate-700 mb-1.5" %>
        <%= f.date_field :start_date, value: params[:start_date], class: "block w-full px-3 py-2.5 border border-slate-200 rounded-xl bg-slate-50/50 focus:bg-white focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all text-sm" %>
      </div>
      <div>
        <%= f.label :end_date, "Data Fim", class: "block text-sm font-medium text-slate-700 mb-1.5" %>
        <%= f.date_field :end_date, value: params[:end_date], class: "block w-full px-3 py-2.5 border border-slate-200 rounded-xl bg-slate-50/50 focus:bg-white focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all text-sm" %>
      </div>
      <div class="flex items-end">
        <%= f.submit "Filtrar", class: "w-full px-5 py-2.5 bg-slate-800 text-white text-sm font-medium rounded-xl hover:bg-slate-700 transition-colors cursor-pointer" %>
      </div>
    </div>
  <% end %>
</div>

      <!-- Invoices Table -->
<div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-slate-200">
      <thead class="bg-slate-50/50">
        <tr>
          <th class="px-6 py-4 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Paciente</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider hidden md:table-cell">Descrição</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Vencimento</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Valor</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-4 text-right text-xs font-semibold text-slate-500 uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-100">
        <% @invoices.each do |invoice| %>
          <tr class="hover:bg-slate-50/50 transition-colors <%= 'bg-red-50/50' if invoice.overdue? %>">
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to invoice.patient, class: "group flex items-center gap-2" do %>
                <div class="w-8 h-8 bg-gradient-to-br from-emerald-400 to-teal-500 rounded-full flex items-center justify-center text-white text-xs font-medium">
                  <%= invoice.patient.name.first.upcase %>
                </div>
                <span class="text-sm font-medium text-slate-900 group-hover:text-indigo-600 transition-colors"><%= invoice.patient.name %></span>
              <% end %>
            </td>
            <td class="px-6 py-4 hidden md:table-cell">
              <span class="text-sm text-slate-600"><%= truncate(invoice.description, length: 40) || "-" %></span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="text-sm text-slate-600"><%= l(invoice.due_date) %></span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="text-sm font-semibold text-slate-900"><%= format_currency(invoice.amount) %></span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= status_badge(invoice.status, :invoice) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right">
              <div class="flex items-center justify-end gap-2">
                <%= link_to invoice, class: "inline-flex items-center px-3 py-1.5 text-xs font-medium text-indigo-600 bg-indigo-50 rounded-lg hover:bg-indigo-100 transition-colors" do %>
                  Ver
                <% end %>
                <% if invoice.pending? %>
                  <%= button_to mark_paid_invoice_path(invoice), method: :patch, class: "inline-flex items-center px-3 py-1.5 text-xs font-medium text-emerald-600 bg-emerald-50 rounded-lg hover:bg-emerald-100 transition-colors cursor-pointer" do %>
                    Marcar Pago
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @invoices.empty? %>
    <div class="text-center py-16">
      <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-slate-900 mb-1">Nenhuma fatura encontrada</h3>
      <p class="text-slate-500 mb-4">Crie a primeira fatura para começar.</p>
      <%= link_to new_invoice_path, class: "inline-flex items-center gap-2 text-sm font-medium text-indigo-600 hover:text-indigo-700" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Criar fatura
      <% end %>
    </div>
  <% end %>
</div>
