<!-- Header -->
<div class="mb-8">
  <%= link_to invoices_path, class: "inline-flex items-center text-sm text-slate-500 hover:text-indigo-600 mb-4 transition-colors" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Voltar para Faturas
  <% end %>
  
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-slate-800">Fatura</h1>
      <p class="text-slate-500">Vencimento: <%= l(@invoice.due_date) %></p>
    </div>
    <div class="flex flex-wrap gap-2">
      <%= link_to edit_invoice_path(@invoice), class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-200 rounded-xl hover:bg-slate-50 transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Editar
      <% end %>
      <% if @invoice.pending? %>
        <%= button_to mark_paid_invoice_path(@invoice), method: :patch, class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-emerald-500 to-emerald-600 rounded-xl hover:from-emerald-600 hover:to-emerald-700 shadow-lg shadow-emerald-500/30 transition-all cursor-pointer" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          Marcar como Pago
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="max-w-3xl">
  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg shadow-slate-200/50 border border-white/50 overflow-hidden">
    <div class="p-6 space-y-6">
      <div class="flex items-center justify-between">
        <span class="text-sm text-slate-500">Status:</span>
        <%= status_badge(@invoice.status, :invoice) %>
      </div>

      <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Paciente</dt>
          <dd class="mt-1">
            <%= link_to @invoice.patient.name, @invoice.patient, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
          </dd>
        </div>

        <div>
          <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Valor</dt>
          <dd class="mt-1 text-2xl font-bold text-slate-800"><%= format_currency(@invoice.amount) %></dd>
        </div>

        <div>
          <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Vencimento</dt>
          <dd class="mt-1 text-slate-800"><%= l(@invoice.due_date) %></dd>
        </div>

        <% if @invoice.paid_at %>
          <div>
            <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Data do Pagamento</dt>
            <dd class="mt-1 text-slate-800"><%= l(@invoice.paid_at, format: :long) %></dd>
          </div>
        <% end %>

        <% if @invoice.appointment %>
          <div>
            <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Consulta Relacionada</dt>
            <dd class="mt-1">
              <%= link_to l(@invoice.appointment.scheduled_at, format: :short), @invoice.appointment, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
            </dd>
          </div>
        <% end %>

        <% if @invoice.description.present? %>
          <div class="md:col-span-2">
            <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Descrição</dt>
            <dd class="mt-1 text-slate-800"><%= simple_format(@invoice.description) %></dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <div class="mt-6 flex justify-end">
    <%= button_to "Excluir", @invoice, method: :delete,
        data: { turbo_confirm: "Tem certeza que deseja excluir esta fatura?" },
        class: "text-red-600 hover:text-red-800 font-medium cursor-pointer transition-colors" %>
  </div>
</div>
