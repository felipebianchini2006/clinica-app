<!-- Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
  <div>
    <h1 class="text-2xl font-bold text-slate-800">Relatório Financeiro</h1>
    <p class="text-slate-500 mt-1">Análise financeira do período selecionado</p>
  </div>
  <%= link_to export_reports_path(start_date: @start_date, end_date: @end_date, format: :csv), class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-emerald-500 to-emerald-600 rounded-xl hover:from-emerald-600 hover:to-emerald-700 shadow-lg shadow-emerald-500/30 transition-all" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
    </svg>
    Exportar CSV
  <% end %>
</div>

<!-- Date Filter -->
<%= form_with url: financial_reports_path, method: :get, class: "mb-6 bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg shadow-slate-200/50 border border-white/50 p-6" do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-end">
    <div>
      <%= f.label :start_date, "Data Início", class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= f.date_field :start_date, value: @start_date, class: "block w-full px-4 py-2 border border-slate-200 rounded-xl bg-white text-slate-800 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <%= f.label :end_date, "Data Fim", class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= f.date_field :end_date, value: @end_date, class: "block w-full px-4 py-2 border border-slate-200 rounded-xl bg-white text-slate-800 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <%= f.submit "Atualizar", class: "w-full px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-indigo-500 to-purple-600 rounded-xl hover:from-indigo-600 hover:to-purple-700 shadow-lg shadow-indigo-500/30 transition-all cursor-pointer" %>
    </div>
  </div>
<% end %>

<!-- Summary Cards -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg shadow-slate-200/50 border border-white/50 p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-emerald-400 to-emerald-600 rounded-xl flex items-center justify-center shadow-lg shadow-emerald-500/30">
        <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-xs font-medium text-slate-500 uppercase tracking-wide">Receita Total</p>
        <p class="text-xl font-bold text-emerald-600"><%= format_currency(@total_revenue) %></p>
      </div>
    </div>
  </div>

  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg shadow-slate-200/50 border border-white/50 p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-amber-400 to-amber-600 rounded-xl flex items-center justify-center shadow-lg shadow-amber-500/30">
        <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-xs font-medium text-slate-500 uppercase tracking-wide">Pendente</p>
        <p class="text-xl font-bold text-amber-600"><%= format_currency(@total_pending) %></p>
      </div>
    </div>
  </div>

  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg shadow-slate-200/50 border border-white/50 p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-red-400 to-red-600 rounded-xl flex items-center justify-center shadow-lg shadow-red-500/30">
        <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-xs font-medium text-slate-500 uppercase tracking-wide">Vencido</p>
        <p class="text-xl font-bold text-red-600"><%= format_currency(@total_overdue) %></p>
      </div>
    </div>
  </div>

  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg shadow-slate-200/50 border border-white/50 p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-indigo-400 to-indigo-600 rounded-xl flex items-center justify-center shadow-lg shadow-indigo-500/30">
        <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-xs font-medium text-slate-500 uppercase tracking-wide">Consultas</p>
        <p class="text-xl font-bold text-indigo-600"><%= @appointments_count %></p>
      </div>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <!-- Revenue by Practitioner -->
  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg shadow-slate-200/50 border border-white/50 p-6">
    <h2 class="text-lg font-semibold text-slate-800 mb-4 flex items-center gap-2">
      <svg class="w-5 h-5 text-violet-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      Receita por Profissional
    </h2>
    <% if @revenue_by_practitioner.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full">
          <thead>
            <tr class="border-b border-slate-200">
              <th class="text-left text-xs font-semibold text-slate-500 uppercase tracking-wide py-3">Profissional</th>
              <th class="text-right text-xs font-semibold text-slate-500 uppercase tracking-wide py-3">Valor</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100">
            <% @revenue_by_practitioner.each do |name, amount| %>
              <tr class="hover:bg-slate-50 transition-colors">
                <td class="py-3 text-sm text-slate-800"><%= name %></td>
                <td class="py-3 text-sm text-right font-semibold text-slate-800"><%= format_currency(amount) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-slate-500 text-center py-8">Nenhum dado disponível para o período.</p>
    <% end %>
  </div>

  <!-- Appointments Summary -->
  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg shadow-slate-200/50 border border-white/50 p-6">
    <h2 class="text-lg font-semibold text-slate-800 mb-4 flex items-center gap-2">
      <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
      </svg>
      Resumo de Consultas
    </h2>
    <dl class="space-y-4">
      <div class="flex justify-between items-center py-2">
        <dt class="text-sm text-slate-500">Total de Consultas</dt>
        <dd class="text-sm font-semibold text-slate-800"><%= @appointments_count %></dd>
      </div>
      <div class="flex justify-between items-center py-2">
        <dt class="text-sm text-slate-500">Consultas Realizadas</dt>
        <dd class="text-sm font-semibold text-emerald-600"><%= @completed_appointments %></dd>
      </div>
      <div class="flex justify-between items-center py-2">
        <dt class="text-sm text-slate-500">Consultas Canceladas</dt>
        <dd class="text-sm font-semibold text-red-600"><%= @cancelled_appointments %></dd>
      </div>
      <% if @appointments_count > 0 %>
        <div class="flex justify-between items-center border-t border-slate-200 pt-4">
          <dt class="text-sm text-slate-500">Taxa de Realização</dt>
          <dd class="text-sm font-semibold text-indigo-600"><%= number_to_percentage((@completed_appointments.to_f / @appointments_count) * 100, precision: 1) %></dd>
        </div>
      <% end %>
    </dl>
  </div>
</div>

<div class="mt-6">
  <%= link_to invoices_path, class: "inline-flex items-center text-sm text-slate-500 hover:text-indigo-600 transition-colors" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Voltar ao Financeiro
  <% end %>
</div>
