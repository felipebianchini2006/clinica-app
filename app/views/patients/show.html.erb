<!-- Header -->
<div class="mb-8">
  <%= link_to patients_path, class: "inline-flex items-center text-sm text-slate-500 hover:text-indigo-600 mb-4 transition-colors" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Voltar para Pacientes
  <% end %>
  
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div class="flex items-center gap-4">
      <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white text-2xl font-bold shadow-lg shadow-indigo-500/30">
        <%= @patient.name[0].upcase %>
      </div>
      <div>
        <h1 class="text-2xl font-bold text-slate-800"><%= @patient.name %></h1>
        <p class="text-slate-500">CPF: <%= @patient.formatted_cpf %></p>
      </div>
    </div>
    <div class="flex flex-wrap gap-2">
      <%= link_to edit_patient_path(@patient), class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-200 rounded-xl hover:bg-slate-50 transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Editar
      <% end %>
      <%= link_to new_appointment_path(patient_id: @patient.id), class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-emerald-500 to-emerald-600 rounded-xl hover:from-emerald-600 hover:to-emerald-700 shadow-lg shadow-emerald-500/30 transition-all" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        Agendar
      <% end %>
      <%= link_to new_medical_record_path(patient_id: @patient.id), class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-indigo-500 to-purple-600 rounded-xl hover:from-indigo-600 hover:to-purple-700 shadow-lg shadow-indigo-500/30 transition-all" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        Prontuário
      <% end %>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Patient Info -->
  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg shadow-slate-200/50 border border-white/50 p-6">
    <h2 class="text-lg font-semibold text-slate-800 mb-4 flex items-center gap-2">
      <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
      </svg>
      Informações
    </h2>
    <dl class="space-y-4">
      <div>
        <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Data de Nascimento</dt>
        <dd class="mt-1 text-sm text-slate-800"><%= @patient.birth_date ? l(@patient.birth_date) : "-" %></dd>
      </div>
      <div>
        <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Idade</dt>
        <dd class="mt-1 text-sm text-slate-800"><%= @patient.age ? "#{@patient.age} anos" : "-" %></dd>
      </div>
      <div>
        <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Telefone</dt>
        <dd class="mt-1 text-sm text-slate-800"><%= @patient.phone || "-" %></dd>
      </div>
      <div>
        <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Email</dt>
        <dd class="mt-1 text-sm text-slate-800"><%= @patient.email || "-" %></dd>
      </div>
      <div>
        <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Endereço</dt>
        <dd class="mt-1 text-sm text-slate-800"><%= @patient.address || "-" %></dd>
      </div>
      <% if @patient.notes.present? %>
        <div>
          <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Observações</dt>
          <dd class="mt-1 text-sm text-slate-800"><%= simple_format(@patient.notes) %></dd>
        </div>
      <% end %>
    </dl>
  </div>

  <!-- Appointments -->
  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg shadow-slate-200/50 border border-white/50 p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-lg font-semibold text-slate-800 flex items-center gap-2">
        <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        Últimas Consultas
      </h2>
      <%= link_to "Ver todas", appointments_path(patient_id: @patient.id), class: "text-sm text-indigo-600 hover:text-indigo-800 font-medium" %>
    </div>
    <ul class="space-y-3">
      <% @appointments.each do |appointment| %>
        <li class="border-l-4 border-blue-400 pl-3">
          <%= link_to appointment, class: "block hover:bg-slate-50 -ml-3 pl-3 py-2 rounded-r-lg transition-colors" do %>
            <p class="text-sm font-medium text-slate-800"><%= l(appointment.scheduled_at, format: :short) %></p>
            <p class="text-xs text-slate-500"><%= appointment.practitioner.name %></p>
            <div class="mt-1"><%= status_badge(appointment.status, :appointment) %></div>
          <% end %>
        </li>
      <% end %>
      <% if @appointments.empty? %>
        <li class="text-sm text-slate-500 py-4 text-center">Nenhuma consulta registrada.</li>
      <% end %>
    </ul>
  </div>

  <!-- Medical Records -->
  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg shadow-slate-200/50 border border-white/50 p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-lg font-semibold text-slate-800 flex items-center gap-2">
        <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        Prontuários
      </h2>
      <%= link_to "Ver todos", medical_records_path(patient_id: @patient.id), class: "text-sm text-indigo-600 hover:text-indigo-800 font-medium" %>
    </div>
    <ul class="space-y-3">
      <% @medical_records.each do |record| %>
        <li class="border-l-4 border-emerald-400 pl-3">
          <%= link_to record, class: "block hover:bg-slate-50 -ml-3 pl-3 py-2 rounded-r-lg transition-colors" do %>
            <p class="text-sm font-medium text-slate-800"><%= truncate(record.diagnosis, length: 50) %></p>
            <p class="text-xs text-slate-500"><%= l(record.created_at, format: :short) %> - <%= record.practitioner.name %></p>
          <% end %>
        </li>
      <% end %>
      <% if @medical_records.empty? %>
        <li class="text-sm text-slate-500 py-4 text-center">Nenhum prontuário registrado.</li>
      <% end %>
    </ul>
  </div>
</div>

<!-- Invoices -->
<div class="mt-6 bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg shadow-slate-200/50 border border-white/50 p-6">
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-lg font-semibold text-slate-800 flex items-center gap-2">
      <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
      </svg>
      Faturas
    </h2>
    <%= link_to new_invoice_path(patient_id: @patient.id), class: "inline-flex items-center gap-1 text-sm bg-gradient-to-r from-indigo-500 to-purple-600 text-white px-3 py-1.5 rounded-lg hover:from-indigo-600 hover:to-purple-700 transition-all" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Nova Fatura
    <% end %>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full">
      <thead>
        <tr class="border-b border-slate-200">
          <th class="text-left text-xs font-semibold text-slate-500 uppercase tracking-wide py-3">Data</th>
          <th class="text-left text-xs font-semibold text-slate-500 uppercase tracking-wide py-3">Descrição</th>
          <th class="text-left text-xs font-semibold text-slate-500 uppercase tracking-wide py-3">Valor</th>
          <th class="text-left text-xs font-semibold text-slate-500 uppercase tracking-wide py-3">Status</th>
          <th class="text-right text-xs font-semibold text-slate-500 uppercase tracking-wide py-3">Ações</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-100">
        <% @invoices.each do |invoice| %>
          <tr class="hover:bg-slate-50 transition-colors">
            <td class="py-3 text-sm text-slate-800"><%= l(invoice.due_date) %></td>
            <td class="py-3 text-sm text-slate-500"><%= truncate(invoice.description, length: 40) || "-" %></td>
            <td class="py-3 text-sm font-medium text-slate-800"><%= format_currency(invoice.amount) %></td>
            <td class="py-3"><%= status_badge(invoice.status, :invoice) %></td>
            <td class="py-3 text-right">
              <%= link_to "Ver", invoice, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% if @invoices.empty? %>
    <p class="text-center py-8 text-slate-500">Nenhuma fatura registrada.</p>
  <% end %>
</div>
