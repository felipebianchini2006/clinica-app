<div class="min-h-screen bg-gray-100">
  <%= render "shared/navbar" %>

  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <%= render "shared/flash" %>

    <div class="px-4 sm:px-0">
      <div class="flex justify-between items-center mb-6">
        <div>
          <h1 class="text-2xl font-bold text-gray-900"><%= @patient.name %></h1>
          <p class="text-gray-500">CPF: <%= @patient.formatted_cpf %></p>
        </div>
        <div class="flex gap-2">
          <%= link_to "Editar", edit_patient_path(@patient), class: "bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700" %>
          <%= link_to "Agendar Consulta", new_appointment_path(patient_id: @patient.id), class: "bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700" %>
          <%= link_to "Novo Prontuário", new_medical_record_path(patient_id: @patient.id), class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700" %>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Patient Info -->
        <div class="bg-white shadow rounded-lg p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Informações</h2>
          <dl class="space-y-3">
            <div>
              <dt class="text-sm font-medium text-gray-500">Data de Nascimento</dt>
              <dd class="text-sm text-gray-900"><%= @patient.birth_date ? l(@patient.birth_date) : "-" %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Idade</dt>
              <dd class="text-sm text-gray-900"><%= @patient.age ? "#{@patient.age} anos" : "-" %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Telefone</dt>
              <dd class="text-sm text-gray-900"><%= @patient.phone || "-" %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Email</dt>
              <dd class="text-sm text-gray-900"><%= @patient.email || "-" %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Endereço</dt>
              <dd class="text-sm text-gray-900"><%= @patient.address || "-" %></dd>
            </div>
            <% if @patient.notes.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Observações</dt>
                <dd class="text-sm text-gray-900"><%= simple_format(@patient.notes) %></dd>
              </div>
            <% end %>
          </dl>
        </div>

        <!-- Appointments -->
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-medium text-gray-900">Últimas Consultas</h2>
            <%= link_to "Ver todas", appointments_path(patient_id: @patient.id), class: "text-sm text-indigo-600 hover:text-indigo-900" %>
          </div>
          <ul class="space-y-3">
            <% @appointments.each do |appointment| %>
              <li class="border-l-4 border-indigo-400 pl-3">
                <%= link_to appointment, class: "block hover:bg-gray-50 -ml-3 pl-3 py-1" do %>
                  <p class="text-sm font-medium text-gray-900"><%= l(appointment.scheduled_at, format: :short) %></p>
                  <p class="text-xs text-gray-500"><%= appointment.practitioner.name %></p>
                  <%= status_badge(appointment.status, :appointment) %>
                <% end %>
              </li>
            <% end %>
            <% if @appointments.empty? %>
              <li class="text-sm text-gray-500">Nenhuma consulta registrada.</li>
            <% end %>
          </ul>
        </div>

        <!-- Medical Records -->
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-medium text-gray-900">Prontuários</h2>
            <%= link_to "Ver todos", medical_records_path(patient_id: @patient.id), class: "text-sm text-indigo-600 hover:text-indigo-900" %>
          </div>
          <ul class="space-y-3">
            <% @medical_records.each do |record| %>
              <li class="border-l-4 border-green-400 pl-3">
                <%= link_to record, class: "block hover:bg-gray-50 -ml-3 pl-3 py-1" do %>
                  <p class="text-sm font-medium text-gray-900"><%= truncate(record.diagnosis, length: 50) %></p>
                  <p class="text-xs text-gray-500"><%= l(record.created_at, format: :short) %> - <%= record.practitioner.name %></p>
                <% end %>
              </li>
            <% end %>
            <% if @medical_records.empty? %>
              <li class="text-sm text-gray-500">Nenhum prontuário registrado.</li>
            <% end %>
          </ul>
        </div>
      </div>

      <!-- Invoices -->
      <div class="mt-6 bg-white shadow rounded-lg p-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-lg font-medium text-gray-900">Faturas</h2>
          <%= link_to "Nova Fatura", new_invoice_path(patient_id: @patient.id), class: "text-sm bg-indigo-600 text-white px-3 py-1 rounded hover:bg-indigo-700" %>
        </div>
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="text-left text-xs font-medium text-gray-500 uppercase">Data</th>
              <th class="text-left text-xs font-medium text-gray-500 uppercase">Descrição</th>
              <th class="text-left text-xs font-medium text-gray-500 uppercase">Valor</th>
              <th class="text-left text-xs font-medium text-gray-500 uppercase">Status</th>
              <th class="text-right text-xs font-medium text-gray-500 uppercase">Ações</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @invoices.each do |invoice| %>
              <tr>
                <td class="py-2 text-sm text-gray-900"><%= l(invoice.due_date) %></td>
                <td class="py-2 text-sm text-gray-500"><%= truncate(invoice.description, length: 40) || "-" %></td>
                <td class="py-2 text-sm text-gray-900"><%= format_currency(invoice.amount) %></td>
                <td class="py-2"><%= status_badge(invoice.status, :invoice) %></td>
                <td class="py-2 text-right">
                  <%= link_to "Ver", invoice, class: "text-indigo-600 hover:text-indigo-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <% if @invoices.empty? %>
          <p class="text-center py-4 text-gray-500">Nenhuma fatura registrada.</p>
        <% end %>
      </div>

      <div class="mt-6">
        <%= link_to "← Voltar", patients_path, class: "text-gray-600 hover:text-gray-900" %>
      </div>
    </div>
  </main>
</div>
