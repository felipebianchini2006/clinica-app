<!-- Header -->
<div class="mb-8">
  <%= link_to appointments_path, class: "inline-flex items-center text-sm text-slate-500 hover:text-indigo-600 mb-4 transition-colors" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Voltar para Consultas
  <% end %>
  
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-slate-800">Consulta</h1>
      <p class="text-slate-500"><%= l(@appointment.scheduled_at, format: :long) %></p>
    </div>
    <div class="flex flex-wrap gap-2">
      <%= link_to edit_appointment_path(@appointment), class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-200 rounded-xl hover:bg-slate-50 transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Editar
      <% end %>
      <% unless @appointment.medical_record %>
        <%= link_to new_medical_record_path(patient_id: @appointment.patient_id, appointment_id: @appointment.id), class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-emerald-500 to-emerald-600 rounded-xl hover:from-emerald-600 hover:to-emerald-700 shadow-lg shadow-emerald-500/30 transition-all" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Criar Prontuário
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="max-w-3xl">
  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg shadow-slate-200/50 border border-white/50 p-6 space-y-6">
    <div class="flex items-center justify-between">
      <span class="text-sm text-slate-500">Status:</span>
      <%= status_badge(@appointment.status, :appointment) %>
    </div>

    <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Paciente</dt>
        <dd class="mt-1">
          <%= link_to @appointment.patient.name, @appointment.patient, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
        </dd>
      </div>

      <div>
        <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Profissional</dt>
        <dd class="mt-1 text-slate-800"><%= @appointment.practitioner.name %></dd>
      </div>

      <div>
        <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Data e Hora</dt>
        <dd class="mt-1 text-slate-800"><%= l(@appointment.scheduled_at, format: :long) %></dd>
      </div>

      <div>
        <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Duração</dt>
        <dd class="mt-1 text-slate-800"><%= @appointment.duration_minutes %> minutos</dd>
      </div>

      <% if @appointment.notes.present? %>
        <div class="md:col-span-2">
          <dt class="text-xs font-medium text-slate-500 uppercase tracking-wide">Observações</dt>
          <dd class="mt-1 text-slate-800"><%= simple_format(@appointment.notes) %></dd>
        </div>
      <% end %>
    </dl>

    <% if @appointment.medical_record %>
      <div class="border-t border-slate-200 pt-6">
        <h3 class="text-lg font-semibold text-slate-800 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Prontuário
        </h3>
        <%= link_to @appointment.medical_record, class: "block bg-slate-50 p-4 rounded-xl hover:bg-slate-100 transition-colors" do %>
          <p class="font-medium text-slate-800"><%= truncate(@appointment.medical_record.diagnosis, length: 100) %></p>
          <p class="text-sm text-slate-500 mt-1">Criado em <%= l(@appointment.medical_record.created_at, format: :short) %></p>
        <% end %>
      </div>
    <% end %>

    <% if @appointment.invoice %>
      <div class="border-t border-slate-200 pt-6">
        <h3 class="text-lg font-semibold text-slate-800 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
          Fatura
        </h3>
        <%= link_to @appointment.invoice, class: "block bg-slate-50 p-4 rounded-xl hover:bg-slate-100 transition-colors" do %>
          <div class="flex justify-between items-center">
            <span class="font-semibold text-slate-800"><%= format_currency(@appointment.invoice.amount) %></span>
            <%= status_badge(@appointment.invoice.status, :invoice) %>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Status Actions -->
    <div class="border-t border-slate-200 pt-6">
      <h3 class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-3">Alterar Status</h3>
      <div class="flex flex-wrap gap-2">
        <% Appointment.statuses.keys.each do |status| %>
          <% unless status == @appointment.status %>
            <%= button_to status.humanize,
                appointment_path(@appointment, appointment: { status: status }),
                method: :patch,
                class: "px-3 py-1.5 rounded-lg text-sm font-medium bg-slate-100 hover:bg-slate-200 text-slate-700 cursor-pointer transition-colors" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mt-6 flex justify-end">
    <%= button_to "Excluir", @appointment, method: :delete,
        data: { turbo_confirm: "Tem certeza que deseja excluir esta consulta?" },
        class: "text-red-600 hover:text-red-800 font-medium cursor-pointer transition-colors" %>
  </div>
</div>
