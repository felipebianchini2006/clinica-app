<!-- Header -->
<div class="mb-8">
  <%= link_to medical_records_path, class: "inline-flex items-center text-sm text-slate-500 hover:text-indigo-600 mb-4 transition-colors" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Voltar para Prontuários
  <% end %>
  
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-slate-800">Prontuário</h1>
      <p class="text-slate-500">Criado em <%= l(@medical_record.created_at, format: :long) %></p>
    </div>
    <div class="flex flex-wrap gap-2">
      <%= link_to edit_medical_record_path(@medical_record), class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-200 rounded-xl hover:bg-slate-50 transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Editar
      <% end %>
    </div>
  </div>
</div>

<div class="max-w-4xl">
  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg shadow-slate-200/50 border border-white/50 overflow-hidden">
    <!-- Patient & Practitioner Info -->
    <div class="bg-gradient-to-r from-slate-50 to-slate-100 px-6 py-4 border-b border-slate-200">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          <span class="text-sm text-slate-500">Paciente:</span>
          <%= link_to @medical_record.patient.name, @medical_record.patient, class: "ml-1 text-indigo-600 hover:text-indigo-800 font-medium" %>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-violet-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="text-sm text-slate-500">Profissional:</span>
          <span class="ml-1 text-slate-800 font-medium"><%= @medical_record.practitioner.name %></span>
        </div>
      </div>
      <% if @medical_record.appointment %>
        <div class="mt-3 flex items-center gap-2">
          <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <span class="text-sm text-slate-500">Consulta:</span>
          <%= link_to l(@medical_record.appointment.scheduled_at, format: :short), @medical_record.appointment, class: "ml-1 text-indigo-600 hover:text-indigo-800 font-medium" %>
        </div>
      <% end %>
    </div>

    <!-- Content -->
    <div class="p-6 space-y-6">
      <div>
        <h3 class="text-lg font-semibold text-slate-800 mb-3 flex items-center gap-2">
          <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
          </svg>
          Diagnóstico
        </h3>
        <div class="bg-slate-50 p-4 rounded-xl">
          <%= simple_format(@medical_record.diagnosis, class: "text-slate-800") %>
        </div>
      </div>

      <% if @medical_record.treatment.present? %>
        <div>
          <h3 class="text-lg font-semibold text-slate-800 mb-3 flex items-center gap-2">
            <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
            </svg>
            Tratamento
          </h3>
          <div class="bg-slate-50 p-4 rounded-xl">
            <%= simple_format(@medical_record.treatment, class: "text-slate-800") %>
          </div>
        </div>
      <% end %>

      <% if @medical_record.notes.present? %>
        <div>
          <h3 class="text-lg font-semibold text-slate-800 mb-3 flex items-center gap-2">
            <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Observações
          </h3>
          <div class="bg-slate-50 p-4 rounded-xl">
            <%= simple_format(@medical_record.notes, class: "text-slate-800") %>
          </div>
        </div>
      <% end %>

      <!-- Attachments -->
      <% if @medical_record.attachments.attached? %>
        <div>
          <h3 class="text-lg font-semibold text-slate-800 mb-3 flex items-center gap-2">
            <svg class="w-5 h-5 text-violet-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"/>
            </svg>
            Anexos (<%= @medical_record.attachments.count %>)
          </h3>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <% @medical_record.attachments.each do |attachment| %>
              <div class="bg-slate-50 rounded-xl p-3 hover:bg-slate-100 transition-colors">
                <% if attachment.image? %>
                  <%= link_to rails_blob_path(attachment, disposition: "inline"), target: "_blank", class: "block" do %>
                    <%= image_tag attachment.variant(resize_to_limit: [200, 200]), class: "rounded-lg mb-2" %>
                    <p class="text-sm text-slate-600 truncate"><%= attachment.filename %></p>
                  <% end %>
                <% else %>
                  <%= link_to rails_blob_path(attachment, disposition: "attachment"), class: "block" do %>
                    <div class="h-20 bg-slate-100 rounded-lg flex items-center justify-center mb-2">
                      <svg class="h-8 w-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                      </svg>
                    </div>
                    <p class="text-sm text-slate-600 truncate"><%= attachment.filename %></p>
                    <p class="text-xs text-slate-400"><%= number_to_human_size(attachment.byte_size) %></p>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-6 flex justify-end">
    <%= button_to "Excluir", @medical_record, method: :delete,
        data: { turbo_confirm: "Tem certeza que deseja excluir este prontuário?" },
        class: "text-red-600 hover:text-red-800 font-medium cursor-pointer transition-colors" %>
  </div>
</div>
