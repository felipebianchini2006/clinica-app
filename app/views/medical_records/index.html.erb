<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8">
  <div>
    <h1 class="text-2xl sm:text-3xl font-bold text-slate-900">Prontuários</h1>
    <p class="mt-1 text-slate-500">Histórico médico dos pacientes</p>
  </div>
  <div class="mt-4 sm:mt-0">
    <%= link_to new_medical_record_path, class: "inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-sm font-medium rounded-xl shadow-lg shadow-indigo-500/30 hover:shadow-xl hover:shadow-indigo-500/40 hover:-translate-y-0.5 transition-all duration-200" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
      </svg>
      Novo Prontuário
    <% end %>
  </div>
</div>

<!-- Filters -->
<div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 p-5 mb-6">
  <%= form_with url: medical_records_path, method: :get, class: "" do |f| %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>
        <%= f.label :patient_id, "Paciente", class: "block text-sm font-medium text-slate-700 mb-1.5" %>
        <%= f.collection_select :patient_id, Patient.order(:name), :id, :name,
            { include_blank: "Todos", selected: params[:patient_id] },
            class: "block w-full px-3 py-2.5 border border-slate-200 rounded-xl bg-slate-50/50 focus:bg-white focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all text-sm" %>
      </div>
      <div>
        <%= f.label :search, "Buscar", class: "block text-sm font-medium text-slate-700 mb-1.5" %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-4 w-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <%= f.text_field :search, value: params[:search], placeholder: "Diagnóstico, tratamento...",
              class: "block w-full pl-10 pr-3 py-2.5 border border-slate-200 rounded-xl bg-slate-50/50 focus:bg-white focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all text-sm" %>
        </div>
      </div>
      <div class="flex items-end">
        <%= f.submit "Filtrar", class: "w-full px-5 py-2.5 bg-slate-800 text-white text-sm font-medium rounded-xl hover:bg-slate-700 transition-colors cursor-pointer" %>
      </div>
    </div>
  <% end %>
</div>

<!-- Medical Records List -->
<div class="space-y-4">
  <% @medical_records.each do |record| %>
    <div class="group bg-white rounded-2xl shadow-sm border border-slate-200/60 p-6 hover:shadow-lg hover:border-slate-300 transition-all duration-300">
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-4">
        <div class="flex-1 min-w-0">
          <div class="flex flex-wrap items-center gap-3 mb-3">
            <%= link_to record.patient, class: "flex items-center gap-2 group/link" do %>
              <div class="w-10 h-10 bg-gradient-to-br from-violet-400 to-purple-500 rounded-full flex items-center justify-center text-white font-medium shadow-sm">
                <%= record.patient.name.first.upcase %>
              </div>
              <span class="text-lg font-semibold text-slate-900 group-hover/link:text-indigo-600 transition-colors"><%= record.patient.name %></span>
            <% end %>
            <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-medium bg-slate-100 text-slate-600">
              <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <%= l(record.created_at, format: :short) %>
            </span>
          </div>
          
          <div class="mb-3">
            <h3 class="text-sm font-semibold text-slate-700 mb-1">Diagnóstico</h3>
            <p class="text-slate-600"><%= truncate(record.diagnosis, length: 180) %></p>
          </div>
          
          <% if record.treatment.present? %>
            <div class="mb-3">
              <h3 class="text-sm font-semibold text-slate-700 mb-1">Tratamento</h3>
              <p class="text-sm text-slate-500"><%= truncate(record.treatment, length: 120) %></p>
            </div>
          <% end %>
          
          <div class="flex flex-wrap items-center gap-4 text-sm text-slate-500">
            <span class="flex items-center gap-1.5">
              <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <%= record.practitioner.name %>
            </span>
            <% if record.attachments.attached? %>
              <span class="flex items-center gap-1.5 text-indigo-600">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13" />
                </svg>
                <%= record.attachments.count %> anexo(s)
              </span>
            <% end %>
          </div>
        </div>
        
        <div class="flex sm:flex-col gap-2">
          <%= link_to record, class: "inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-indigo-600 bg-indigo-50 rounded-xl hover:bg-indigo-100 transition-colors" do %>
            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            Ver
          <% end %>
          <%= link_to edit_medical_record_path(record), class: "inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-slate-600 bg-slate-100 rounded-xl hover:bg-slate-200 transition-colors" do %>
            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Editar
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <% if @medical_records.empty? %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 p-16 text-center">
      <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-slate-900 mb-1">Nenhum prontuário encontrado</h3>
      <p class="text-slate-500 mb-4">Crie o primeiro prontuário médico.</p>
      <%= link_to new_medical_record_path, class: "inline-flex items-center gap-2 text-sm font-medium text-indigo-600 hover:text-indigo-700" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Criar prontuário
      <% end %>
    </div>
  <% end %>
</div>
