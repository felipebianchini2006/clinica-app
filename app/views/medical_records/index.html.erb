<div class="min-h-screen bg-gray-100">
  <%= render "shared/navbar" %>

  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <%= render "shared/flash" %>

    <div class="px-4 sm:px-0">
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-900">Prontuários</h1>
        <%= link_to "Novo Prontuário", new_medical_record_path, class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700" %>
      </div>

      <!-- Filters -->
      <%= form_with url: medical_records_path, method: :get, class: "mb-6 bg-white p-4 rounded-lg shadow" do |f| %>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <%= f.label :patient_id, "Paciente", class: "block text-sm font-medium text-gray-700" %>
            <%= f.collection_select :patient_id, Patient.order(:name), :id, :name,
                { include_blank: "Todos", selected: params[:patient_id] },
                class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" %>
          </div>
          <div>
            <%= f.label :search, "Buscar", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :search, value: params[:search], placeholder: "Diagnóstico, tratamento...",
                class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" %>
          </div>
          <div class="flex items-end">
            <%= f.submit "Filtrar", class: "bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700 cursor-pointer" %>
          </div>
        </div>
      <% end %>

      <!-- Medical Records List -->
      <div class="space-y-4">
        <% @medical_records.each do |record| %>
          <div class="bg-white shadow rounded-lg p-6 hover:shadow-md transition-shadow">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <%= link_to record.patient.name, record.patient, class: "text-lg font-medium text-indigo-600 hover:text-indigo-900" %>
                  <span class="text-sm text-gray-500"><%= l(record.created_at, format: :short) %></span>
                </div>
                <p class="text-gray-900 font-medium"><%= truncate(record.diagnosis, length: 150) %></p>
                <% if record.treatment.present? %>
                  <p class="text-sm text-gray-600 mt-1"><strong>Tratamento:</strong> <%= truncate(record.treatment, length: 100) %></p>
                <% end %>
                <p class="text-sm text-gray-500 mt-2">
                  Profissional: <%= record.practitioner.name %>
                  <% if record.attachments.attached? %>
                    · <%= record.attachments.count %> anexo(s)
                  <% end %>
                </p>
              </div>
              <div class="flex gap-2">
                <%= link_to "Ver", record, class: "text-indigo-600 hover:text-indigo-900" %>
                <%= link_to "Editar", edit_medical_record_path(record), class: "text-gray-600 hover:text-gray-900" %>
              </div>
            </div>
          </div>
        <% end %>

        <% if @medical_records.empty? %>
          <div class="bg-white shadow rounded-lg p-12 text-center">
            <p class="text-gray-500">Nenhum prontuário encontrado.</p>
          </div>
        <% end %>
      </div>
    </div>
  </main>
</div>
